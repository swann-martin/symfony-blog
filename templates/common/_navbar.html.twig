<header class="blog-header py-3">
	<div class="row flex-nowrap justify-content-between align-items-center">
		<div class="col-4 pt-1">
			{% if app.user %}
				{# utilisation de app.user qui est une variable globale de twig pour savoir si l'utilisateur est connecté #}

				<a class="btn btn-outline-info" href="{{ path('app_post_create')}}">
					create a post as
					{{ app.user}}</a>
			{% else %}
				<a class="text-muted" href=" {{ path('app_register')}}">Sign up</a>
			{% endif %}
		</div>
		<div class="col-4 text-center">
			<a class="blog-header-logo text-dark" href="{{ path('app_home') }}">Symfony Blog 2021</a>
		</div>
		<div class="col-4 d-flex justify-content-end align-items-center">
			{% if app.user %}
				<a class="btn btn-sm btn-outline-danger" href="{{ path('app_logout')}}">Log out
					{{ app.user}}</a>
				{# utilisation de app.user qui est une variable globale de twig pour savoir si l'utilisateur est connecté #}

			{% else %}
				<a class="btn btn-sm btn-outline-secondary " href="{{ path('app_login')}}">Log in</a>
			{% endif %}
			<a class="btn btn-sm btn-outline-secondary mx-1" href="{{ path('app_logout')}}">Contact</a>
		</div>
	</div>
</header>
